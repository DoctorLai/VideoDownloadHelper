{
  "manifest_version": 2,
  "name": "Simple Video Download Helper",
  "short_name": "Video Download Helper",
  "default_locale": "en",
  "version": "3.0.16",
  "browser_action": {
     "default_icon": "icon.png",
     "default_title": "Video Download Helper",
     "default_popup": "main.html"
  },
  "offline_enabled": true,  
  "author": "justyy<dr.zhihua.lai@gmail.com>",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },    
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Simple Video Download Helper (doesn't work on youtube.com)",
  "web_accessible_resources": [
      "css/*", 
      "js/*", 
      "dist/*", 
  		"images/*",
      "bs/*",
      "tested-urls.txt"
  ],  
  "background": {
    "scripts": [
      "js/background_simpledownloader.js"
    ],
    "persistent": true
  },  
  "permissions": [
     "activeTab",
     "storage",
     "tabs",
     "<all_urls>"
  ],
  "content_scripts": [ {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["http://*.youtube.com/*", "https://*.youtube.com/*"],
      "js": [
        "js/background.js", 
        "js/m_inc.js"
      ]
  } ]   
}